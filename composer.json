{
	"name": "david63/autotopicsubscribe",
	"type": "phpbb-extension",
	"description": "Adds an option for a user to be automatically subscribed to a topic that they start.",
	"version": "3.1.0-RC1",
	"time": "2021-01-01",
	"keywords": [
		"phpbb",
		"extension",
		"auto",
		"topic",
		"subscribe"
	],
	"license": "GPL-2.0-only",
	"authors": [{
            "name": "David Wood",
            "role": "Developer"
		}],
	"require": {
        "php": ">=7.1.3",
        "composer/installers": "~1.0"
    },
	"extra": {
		"display-name": "[d63] Auto subscribe to new topic",
		"soft-require": {
			"phpbb/phpbb": ">=3.3.0,<4.0.0@dev"
		},
		"version-check": {
        	"host": "version.phpbbdev.space",
        	"directory": "/versions",
        	"filename": "auto_topic_subscribe_version_file.json",
			"ssl": false
    	}
	}
}
